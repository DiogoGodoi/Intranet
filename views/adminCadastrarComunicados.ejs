<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/adminCadastrarComunicados.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <title>Document</title>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div secao2>
        <div class="mb-3 col-12">
            <form action="/admin/comunicados/cadastrar/add" method="post">
            <label for="exampleFormControlInput1" class="form-label">Titulo</label>
            <input type="text" class="form-control" placeholder="Titulo" name="titulo">
            <br>
            <label for="exampleFormControlTextarea1" class="form-label">Postagem</label>
            <textarea class="form-control" rows="5"  name="mensagem"></textarea><br><br>
            <center><button type="submit" class="btn btn-primary">Enviar</button></center>
            <br>
            
            <% if (mensagem === "" || titulo === "") { %>
                <% mensagens.forEach(mensagens => { %> 
                  <div alerta class="alert alert-danger" role="alert">
                    <%= mensagens.erro %> 
                  </div>
                <% }) %> 
    
              <% }else if(mensagem !== undefined && titulo !== undefined) { %>
                <% mensagens.forEach(mensagens => { %>
                  <div alerta class="alert alert-success" role="alert">
                    <%= mensagens.sucesso %>
                  </div>
                <%})%>
              <% }%>
            </form>
          </div>
    </div>

    <%- include('partials/footer') %>
    <script src="/bootstrap/js/bootstrap.js"></script>
</body>
</html>